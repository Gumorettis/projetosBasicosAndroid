<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="73dp">

    <TextView
        android:id="@+id/lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:text="@string/teste_de_parametros"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/lbl2"
        android:layout_marginTop="138dp"
        android:text="Digite seu nome:"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtNome"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_toEndOf="@+id/lbl2"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/lbl2"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="127dp"
        android:layout_marginStart="27dp"
        android:text="Seu nome Ã©: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="196dp"
        android:text="Gerar"
        android:textColor="#000dfe"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtNome"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lbl2"
        android:layout_toEndOf="@+id/lbl2"
        android:fontFamily="casual"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

</RelativeLayout>