<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#919acb"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="monospace"
        android:text="TESTE DE APLICATIVO "
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btn"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginTop="208dp"
        android:background="#dac55301"
        android:text="Gerar Nome"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:fontFamily="monospace"
        android:text="DIGITE SEU NOME:"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/edtNome" />

    <EditText
        android:id="@+id/edtNome"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="101dp"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:fontFamily="serif"
        android:text="Seu Nome Ã©: "
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="@+id/textNome"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textNome"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="173dp"
        android:fontFamily="serif"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/edtNome"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>