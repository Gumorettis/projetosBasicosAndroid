<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLay"
        android:layout_width="364dp"
        android:layout_height="516dp"
        android:background="@drawable/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/txt3"
            android:layout_marginBottom="140dp"
            android:fontFamily="serif"
            android:text="Valor do produto com desconto:"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/edtValorDesc"
            android:layout_marginBottom="213dp"
            android:fontFamily="serif"
            android:text="Valor do produto sem desconto:"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="17dp"
            android:fontFamily="serif"
            android:text="Escolha um produto abaixo:"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/tableLayout"
            android:layout_width="321dp"
            android:layout_height="128dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="19dp"
            android:layout_marginTop="146dp"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/rbGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/rbTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Smart TV Samsung"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/rbComputador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Computador i7"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/rbAr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ar condicionado"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/rbGeladeira"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Geladeira"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
            </RadioGroup>
        </LinearLayout>

        <EditText
            android:id="@+id/edtValorDesc"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-142dp"
            android:ems="10"
            android:enabled="false"
            android:fontFamily="sans-serif"
            android:inputType="number"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtValorReal"
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-214dp"
            android:ems="10"
            android:enabled="false"
            android:fontFamily="sans-serif"
            android:inputType="number"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnGerar"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="42dp"
            android:background="@android:color/holo_red_dark"
            android:fontFamily="casual"
            android:shadowColor="@android:color/white"
            android:text="Gerar PreÃ§os "
            android:textColor="@android:color/white"
            android:textStyle="bold|italic" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>